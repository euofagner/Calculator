<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Calculator.Views.CalculatorView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Calculadora"
    BackgroundColor="Black">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="mainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="HeightRequest" Value="90" />
                <Setter Property="WidthRequest" Value="90" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontSize" Value="25" />
            </Style>

            <Style
                x:Key="orangeTxt"
                BasedOn="{StaticResource mainButton}"
                TargetType="Button">
                <Setter Property="TextColor" Value="#ff7717" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions=".35*, .65*">
        <VerticalStackLayout>
            <Label Text="100+100" />
            <Label Text="200" />
        </VerticalStackLayout>

        <Grid Grid.Row="1">

            <Grid
                Padding="35"
                ColumnDefinitions="*, *, *, *"
                ColumnSpacing="15"
                RowDefinitions="*, *, *, *, *"
                RowSpacing="15">

                <Button
                    FontSize="25"
                    Style="{StaticResource orangeTxt}"
                    Text="AC" />

                <ImageButton
                    Grid.Column="1"
                    HeightRequest="30"
                    Source="delete.png"
                    Style="{StaticResource mainButton}">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="#ff7717" />
                    </ImageButton.Behaviors>
                </ImageButton>

                <ImageButton
                    Grid.Column="2"
                    HeightRequest="45"
                    Source="percentage.png">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="#ff7717" />
                    </ImageButton.Behaviors>
                </ImageButton>

                <ImageButton
                    Grid.Column="3"
                    Source="divide.png"
                    WidthRequest="25">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="#ff7717" />
                    </ImageButton.Behaviors>
                </ImageButton>

                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    FontAttributes="Bold"
                    FontSize="35"
                    Style="{StaticResource orangeTxt}"
                    Text="x" />

                <ImageButton
                    Grid.Row="2"
                    Grid.Column="3"
                    Source="minus.png"
                    WidthRequest="25">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="#ff7717" />
                    </ImageButton.Behaviors>
                </ImageButton>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>